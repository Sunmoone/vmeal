<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label '详细地址:' %><br />
    <%= f.text_field :address , :size=>30%>
  </div>
  <div class="field">
    <%= f.label '电话 :'%><br />
    <%= f.text_field :phone ,:size =>11%>
  </div>
  <div class="field">
    <%= f.label '收件人姓名:' %><br />
    <%= f.text_field :name ,:size =>15%>
  </div>
  <div class="field">
    <%= f.label '付款方式:' %><br />
    <%= f.select :pay_type, Order::PAYMENT_TYPES %>
  </div>
  <div class="field">
    <%= f.label '备注:' %><br />
    <%= f.text_area :comment, :rows=>6 %>
  </div>
  <div class="actions">
    <%= f.submit '提交'%>
  </div>
<% end %>
