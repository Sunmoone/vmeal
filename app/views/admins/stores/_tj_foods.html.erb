<div class="row-fluid sortable">		
				<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2><i class="icon-home"></i>店长推荐美食</h2>
						<div class="box-icon">
							<a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
							<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
							<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
						</div>
					</div>
					<div class="box-content">
						<table class="table table-striped table-bordered bootstrap-datatable datatable">
						  <thead>
							  <tr>
								  <th>名称</th>
								  <th>店家</th>
								  <th>推荐时间</th>
								  <th> 状态</th>
								  <th>操作</th>
							  </tr>
						  </thead>   
						  <tbody>
						  	<%@foods.each_with_index do |food,index|%>
						  	  <tr>
									<td><%=link_to food.name%></td>
									<td class="center"><%=food.store.name%></td>
									<td class="center">2012/08/30</td>
									<td class="center">
										<span class="label label-<%= ['important', 'success'][index%2] %>">
											<%= ['未审核', '审核通过'][index%2]%></span>
									</td>
									<td class="center">
										<a class="btn btn-success" href="#">
											<i class="icon-zoom-in icon-white"></i>  
											查看                                            
										</a>
										<a class="btn btn-<%= ['info', 'danger'][index%2] %>" href="#">
											<i class="icon-edit icon-white"></i>  
											<%= ['审核通过', '取消推荐'][index%2]%>                                            
										</a>
									</td>
							</tr>
						  	<%end%>
							
						  </tbody>
					  </table>            
					</div>
				</div><!--/span-->
</div><!--/row-->