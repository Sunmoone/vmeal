<%unless @activity.users.blank?%>
<div class='bs-docs-example'>
  中奖用户如下:<br/>
  <table class="table table-bordered">
      <tr>
        <td >编号</td>
        <td >用户名</td>
        <td >联系地址</td>
        <td>联系电话</td>
      </tr>

  <tbody>
  <%@activity.users.each do |u|%>
    <tr>
      <td><%=u.id%></td>
      <td><%=u.username%></td>
      <td><%=u.good_address.address%></td>
      <td><%=u.good_address.tel_number%></td>
    </tr>
  <%end%>
  </tbody>
</table>
</div>
<%end%>
</div>



