<div class="control-group ">
  <label class='control-label'>学校名称:</label>
  <div class="controls">
    <%= f.text_field :name, class:'input-xlarge', :rows=>"2" %>
  </div>
</div>

<div class="control-group ">
  <label class='control-label'>学校图片:</label>
  <div class="controls">
    <%= f.file_field :avatar, class:'input-xlarge' %>
  </div>
</div>
 
<div class="form-actions">
	<%= f.submit '提交', :class=>"btn btn-primary"%>
	<%=link_to  '取消', admins_schools_path %>
</div>


