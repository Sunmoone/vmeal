<div class = "main_content_details_table">
  <table width="100%" border="0"  cellpadding="0" cellspacing="0">
    <tr>
    </tr>
    <tr>
      <th>财务结帐区间（半月为单位）</th>
      <th>成功订单销售额</th>
      <th></th>
      <th></th>
    </tr>
    <% @finance.each do |key,value| %>
    <% unless value == 0 %>
    <tr>
      <td><%= key %></td>
      <td><%= value %>元</td>
      <td></td>
      <td></td>
    </tr>
    <% end %>
    <% end %>
  </table>
  <label style="float: right;">销售总额：<%= @sales_sum%>元</label>
  <div style="float: left;">
    <%= form_for @store ,:url=>{:action=>:search_finance}  do |f|%>
    <%= f.text_field :date,:value => Time.now.to_date,:onclick => "WdatePicker()",:size => "10" %>
      <%= f.submit  :查询,:style => "width: 50px;height: 21px;border: none;background-color: #601606;font-size: 12px;color: #FFF;"%>
    <% end %>
  </div>
</div>
