	<%= form_tag '/stores/store_login' ,:class =>"form-horizontal" %>
			<fieldset>
					<div class="input-prepend" title="Username" data-rel="tooltip">
						<span class="add-on"><i class="icon-user"></i></span><input autofocus class="input-large span10" name="name" id="name" type="text"/>
					</div>
					<div class="clearfix"></div>

					<div class="input-prepend" title="Password" data-rel="tooltip">
								<span class="add-on"><i class="icon-lock"></i></span><input class="input-large span10" name="password" id="password" type="password"/>
					</div>
					<div class="clearfix"></div>

					<div class="input-prepend">
					<label class="remember" for="remember"><input type="checkbox" id="remember" />Remember me</label>
					</div>
					<div class="clearfix"></div>

					<p class="center span5">
		<button type="submit" class="btn btn-primary">Login</button>
		   </p>
		</fieldset>
</form>


